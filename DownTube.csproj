  </ItemGroup>

  <ItemGroup>
    <Folder Include="Views\Windows\" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\MVVMUtils\MVVMUtils.csproj" />
  </ItemGroup>

</Project>
