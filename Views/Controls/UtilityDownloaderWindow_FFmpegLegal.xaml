<UserControl
    x:Class="DownTube.Views.Controls.UtilityDownloaderWindow_FFmpegLegal"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Margin="30,0,30,0"
    d:DesignHeight="45"
    d:DesignWidth="486"
    mc:Ignorable="d">
    <TextBlock
        HorizontalAlignment="Center"
        VerticalAlignment="Center"
        TextAlignment="Center"
        TextWrapping="WrapWithOverflow">
        <Run Text="FFmpeg is licensed under" />
        <Hyperlink Click="FFmpegLicenseHyperlink_Click">
            <Run Text="GNU LGPL version 2.1" />
        </Hyperlink>
        <Run Text="or later." />
        <LineBreak />
        <Run Text="Find out more about legalities" />
        <Hyperlink Click="FFmpegLegalHyperlink_Click">
            <Run Text="here." />
        </Hyperlink>
    </TextBlock>
</UserControl>