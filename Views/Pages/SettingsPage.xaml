<Page x:Class="DownTube.Views.Pages.SettingsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:controls="clr-namespace:DownTube.Views.Controls"
      xmlns:pages="clr-namespace:DownTube.Views.Pages"
      xmlns:common="clr-namespace:DownTube.DataTypes.Common"
      xmlns:converters="clr-namespace:DownTube.Converters"
      mc:Ignorable="d"
      FontFamily="AtkinsonHyperlegible"
      d:DesignHeight="388"
      d:DesignWidth="635"
      Style="{StaticResource UiPageScrollable}"
      Title="Settings"
      d:DataContext="{x:Type pages:SettingsPage_ViewModel}">
    <Page.Resources>
        <common:StaticBindings x:Key="StatInfo"/>
        <converters:VersionToStringConverter x:Key="VerToStringConv" />
    </Page.Resources>
    <SelectiveScrollingGrid Margin="0,0,0,0" d:Margin="0,0,0,0">
        <SelectiveScrollingGrid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition />
            <RowDefinition Height="60"/>
        </SelectiveScrollingGrid.RowDefinitions>
        <TextBlock Grid.Row="0"
                   FontSize="20"
                   Text="Settings" />
        <ItemsControl Grid.Row="1"
                      HorizontalAlignment="Stretch"
                      Padding="5">
            <ItemsControl.ItemTemplate>
                <DataTemplate DataType="{x:Type pages:SettingsField}">
                    <Grid Height="40"
                          Margin="0,0,0,5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="120" />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="{Binding FieldName}"
                                   ToolTip="{Binding ToolTip}"
                                   Grid.Column="0"
                                   HorizontalAlignment="Left"
                                   VerticalAlignment="Center"
                                   FontSize="16" />
                        <ContentPresenter Content="{Binding Content}"
                                          Grid.Column="1" />
                    </Grid>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
            <ItemsControl.Items>
                <pages:SettingsField FieldName="FFmpeg Path: "
                                     ToolTip="The path to the ffmpeg.exe executable. If you have not downloaded it already, click on the 'Download Now' link underneath the setting field.">
                    <controls:FilePicker />
                </pages:SettingsField>
                <pages:SettingsField FieldName="YoutubeDL Path: "
                                     ToolTip="The path to the youtube-dl.exe executable. If you have not downloaded it already, click on the 'Download Now' link underneath the setting field.">
                    <controls:FilePicker />
                </pages:SettingsField>
                <pages:SettingsField FieldName="Output Folder"
                                     ToolTip="The folder to download videos to.">
                    <controls:FolderPicker />
                </pages:SettingsField>
            </ItemsControl.Items>
        </ItemsControl>
        <Border Grid.Row="2"
                Background="{DynamicResource AccentFillColorDisabledBrush}"
                CornerRadius="4"
                Margin="5">
            <SelectiveScrollingGrid>
                <SelectiveScrollingGrid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                </SelectiveScrollingGrid.ColumnDefinitions>
                <StackPanel Orientation="Vertical"
                            VerticalAlignment="Center"
                            Grid.Column="1"
                            HorizontalAlignment="Center">
                    <TextBlock HorizontalAlignment="Center">
                        <Hyperlink TextDecorations="None"
                                   Click="MainRepo_Click"
                                   Foreground="{DynamicResource TextFillColorPrimaryBrush}">
                            <Run Text="{Binding Source={StaticResource StatInfo}, Path=AppName, Mode=OneWay}" />
                        </Hyperlink>
                        <Run Text="-" />
                        <Hyperlink TextDecorations="None"
                                   Click="CurrentVersion_Click"
                                   Foreground="{DynamicResource TextFillColorPrimaryBrush}">
                            <Run Text="{Binding Source={StaticResource StatInfo}, Path=AppVersion, Converter={StaticResource VerToStringConv}, Mode=OneWay}" />
                        </Hyperlink>
                    </TextBlock>
                    <TextBlock HorizontalAlignment="Center"
                               Foreground="{DynamicResource TextFillColorTertiaryBrush}">
                        <Run Text="©" />
                        <Run Text="{Binding Source={StaticResource StatInfo}, Path=AppCompany, Mode=OneWay}" />
                        <Run Text="{Binding Source={StaticResource StatInfo}, Path=CopyrightYearRange, Mode=OneWay}"/>
                    </TextBlock>
                </StackPanel>
            </SelectiveScrollingGrid>
        </Border>
    </SelectiveScrollingGrid>
</Page>